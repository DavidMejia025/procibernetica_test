<div class="tasks_table">
  <table id="dtVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="done" scope="col"></th>
        <th class="task_title" scope="col">TO DO</th>
        <th class="task_menu" scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <th class="done">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="materialChecked2">
              <label class="form-check-label" for="materialChecked2"></label>
            </div>
          </th>
          <td class="task_title"> <%= link_to task.title, task, remote: true%></td>
          <td class="task_menu">
            menu
            <%= link_to 'Kill',  { action: :destroy, id: task.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end  %>
    </tbody>
  </table>
</div>
