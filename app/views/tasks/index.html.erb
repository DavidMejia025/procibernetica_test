<div class="container">
  <div class="row">
      <div class="col-md-4 col-md-offset-5" >
        <button type="button" class="btn btn-success pull-left" data-toggle="modal" data-target="#exampleModal">
          <span class="glyphicon glyphicon-plus"></span>Add New Task
        </button>
        <div id="modales"> <%= render 'tasks/partials/task_modal' %>  </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4" style="border: red">
            <%= render 'tasks/partials/search_bar' %>
        </div>
      </div>
      <div class="row blank_space"> </div>

      <div class="row">
        <div class="col-md-4">
          <%= render 'tasks/partials/tasks_table', { tasks: @to_do_tasks, name: "TO DO" } %>
        </div>
        <div class="col-md-2 col-md-offset-2" style="border: red">

        </div>
        <div class="col-md-4">
            <%= render 'tasks/partials/tasks_table', { tasks: @done_tasks, name: "DONE" }%>
        </div>
      </div>
  </div>
</div>




<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks&.each do |task| %>
      <tr>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
